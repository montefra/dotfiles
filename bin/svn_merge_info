#!/bin/bash
# loop through all the branches and runs
# svn mergeinfo $branch
# svn mergeinfo --show-revs eligible $branch

function help {
  echo "  Loop through the branches and for each one print the svn merge infos"
  echo "  and which commits are still to be merged."
  echo "  If no branch name to search is provided, '^/branches' is used."
  echo "  Usage"
  echo "    `basename $1` [branches_name]"
  exit
}

if [ "$1" == '-h' -o "$1" == '--help' ]
then
    help $0
fi

if [ $# -ge 1 ]
then
    branches="$1"
else
    branches="^/branches"
fi

for b in `svn ls $branches`
do
    branch="$branches/$b"
    echo -e "\e[96m===== START: $branch =====\e[0m"
    svn mergeinfo $branch
    commits=`svn mergeinfo --show-revs eligible $branch`
    if [ x"$commits" = x ]
    then
        echo -e "\e[32mNo commits to merge\e[0m"
    else
        echo -e "\e[91mCommits to merge: \e[1m${commits//$'\n'/ }\e[0m"
    fi
    echo -e "\e[36m===== FINISH: $branch =====\e[0m"
done
